{
  "plugins": [
    "angular",
    "async-await",
    "babel",
    "compat",
    "css-modules",
    "filenames",
    "flow-vars",
    "flowtype",
    "graphql",
    "html",
    "import",
    "jasmine",
    "jest",
    "json",
    "jsx-a11y",
    "markdown",
    "meteor",
    "mocha",
    "mongodb",
    "no-unused-vars-rest",
    "node",
    "nodeca",
    "prefer-arrow",
    "prefer-object-spread",
    "prettier",
    "promise",
    "react",
    "react-native",
    "redux-saga",
    "requirejs",
    "security",
    "standard",
    "webdriverio"
  ],
  "settings": {
    "html/html-extensions": [ ".html", ".we" ] // consider .html and .we files as HTML
  },
  "env": {
    "webdriverio/wdio": true,
    "mocha": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:jsx-a11y/recommended",
    "plugin:meteor/recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended",
    "plugin:promise/recommended",
    "plugin:react/recommended",
    "plugin:react-native/all",
    "plugin:redux-saga/recommended",
    "plugin:requirejs/recommended",
    "plugin:security/recommended",
    "plugin:jasmine/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "meteor/no-template-lifecycle-assignments" : 2,
    "meteor/no-template-parent-data" : 2,    
    "import/no-dynamic-require": 2,
    "import/no-unresolved": 2,
    "requirejs/no-invalid-define": 2,
    "requirejs/no-multiple-define": 2,
    "requirejs/no-named-define": 2,
    "requirejs/no-commonjs-wrapper": 2,
    "requirejs/no-object-define": 1,    
    "angular/controller_name": 1,
    "async-await/space-after-async": 2,
    "async-await/space-after-await": 2,
    "babel/new-cap": 1,
    "compat/compat": "error",
    "css-modules/no-unused-class": [
      2,
      { "camelCase": true }
    ],
    "css-modules/no-undef-class": [
      2,
      { "camelCase": true }
    ],
    "filenames/match-regex": 2,
    "filenames/match-exported": 2,
    "filenames/no-index": 2,
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "flowtype/boolean-style": [
      2,
      "boolean"
    ],
    "flowtype/define-flow-type": 1,
    "flowtype/delimiter-dangle": [
      2,
      "never"
    ],
    "graphql/template-strings": [
      "error",
      { "env": "apollo" }
    ],
    "import/named": 2,
    "no-global-setup": 2,
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "mocha/no-exclusive-tests": "error",
    "prefer-arrow/prefer-arrow-functions": [
      "warn",
      {
        "disallowPrototype": true,
        "singleReturnOnly": false,
        "classPropertiesAllowed": false
      }
    ],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "parser": "flow"
      }
    ],
    "standard/object-curly-even-spacing": [ 2, "either" ],
    "standard/array-bracket-even-spacing": [ 2, "either" ],
    "standard/computed-property-even-spacing": [ 2, "even" ],
    "standard/no-callback-literal": [
      2,
      [ "cb", "callback" ]
    ],
    "no-unused-vars-rest/no-unused-vars": 1
  }
}
